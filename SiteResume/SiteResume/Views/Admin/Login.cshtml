@model SiteResume.Models.LoginVM
@{ ViewData["Title"] = "Admin Login"; }
<link href="~/css/AdminLoginStyle.min.css" rel="stylesheet" />
<p class="headerLabel">Admin Login Panel</p>
@Html.AntiForgeryToken()
<div class="row PadMar_0">
    <div class="col-md"></div>
    <div class="col-md  PadMar_0">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="ErrorLabel"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input class="form-control FormInput" asp-for="Email" placeholder="Email" aria-label="Email" aria-describedby="addon-wrapping">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" class="form-control FormInput" asp-for="Password" placeholder="Password" aria-label="Password" aria-describedby="addon-wrapping">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: flex; justify-content: center;">
                <input type="submit" value="Login" class="blurFilter SubmitInput" />
            </div>
        </form>
    </div>
    <div class="col-md"></div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}