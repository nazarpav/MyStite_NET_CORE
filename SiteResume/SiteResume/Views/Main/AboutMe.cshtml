@model SiteResume.Models.AboutMeVM
@{
    ViewBag.Title = "AboutMe";
}
<link href="~/css/AboutMyStyle.min.css" rel="stylesheet" />
<div class="container PadMar_0 blurFilter MaxWH_100" style="margin-top: 2vh;">
    <div class="row PadMar_0 MaxWH_100">
        <div class="col-sm PadMar_0 MaxWH_100" style="margin-left:1vw;">
            <h2 class="greenFont">Павлюк Назар</h2>
            <div class="lightFont" style="margin-left:0.5vw;">
                <div class="container PadMar_0  MaxWH_100">
                    <div class="row PadMar_0  MaxWH_100">
                        <div class="col-lg-1  PadMar_0  MaxWH_100">
                            <img src="~/images/_MainImages/MyPhoto_.png" alt="Alternate Text" style="max-height: 18vh;" />
                        </div>
                        <div class="col-lg-11  PadMar_0 MaxWH_100">
                            <h4>
                                <span class="greenFont">Дата народження: </span>@Model.DateOfBirth.ToLongDateString()<br>
                                <span class="greenFont">e-mail: </span>@Model.Email<br>
                                <span class="greenFont">тел: </span>@Model.PhoneNumber @Model.RegisteredSocialNetworksWithPhone<br>
                                <span class="greenFont">Telegram: </span>@Model.TelegramLink <br>
                                <span class="greenFont">GitHub: </span>@Model.GitHubLink
                            </h4>
                        </div>
                    </div>
                </div>
                <h5>
                    <span class="greenFont">Навички:</span><br>
                    Програмування: @Model.Skills<br>
                    <span class="greenFont">Освіта:</span><br>
                    @Model.Educations<br>
                    <span class="greenFont">Додаткова освіта:</span><br>
                    @Model.AdditionalEducations<br><br>
                    <span class="greenFont">Ціль:</span><br>
                    @Model.CareerObjective<br><br>
                    <span class="greenFont">Додатково:</span><br>
                    @Model.AdditionalInformation<br>
                </h5>
            </div>
        </div>
    </div>
</div>

